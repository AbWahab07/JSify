<!-- /templates/customers/register.liquid -->
<div class="container">
  <div class="row">
    <div class="col s12"><h1>Register For An Account</h1></div>
  </div>
  <div class="row">
    <div class="col s12 l6 push-l3 create-customer">
      {% form 'create_customer' %}

      {{ form.errors | default_errors }}
      
      <div class="input-field">
        <input type="text" value="" name="customer[first_name]" size="30" />
        <label for="first_name">First Name</label>
      </div>

      <div class="input-field hp-bcontrol">
        <input type="text" value="" name="hpName" size="30" tabindex="-1" autocomplete="off" />
        <label for="hpName">Name</label>
      </div>
      
      <div class="input-field">
        <input type="text" value="" name="customer[last_name]" size="30" />
        <label for="last_name">Last Name</label>
      </div>
      
      <div class="input-field">
        <input type="email" value="" name="customer[email]" size="30" />
        <label for="email">Email Address</label>
      </div>
      
      <div class="input-field">
        <input type="password" value="" name="customer[password]" size="30" />
        <label for="password">Password</label>
      </div>
      
      <input type="submit" value="Create" class="btn waves waves-light background-s-red right" />
      
      {% endform %}
    </div>
  </div>
</div>

<script>
  const Form = document.querySelector('.create-customer form');
  const Honeypot = Form.querySelector('.hp-bcontrol input');
  Form.addEventListener('submit', event => {
    if(Honeypot.value && Honeypot.value !== '') {
      event.preventDefault();
      console.log('nope');
    }
  });
</script>

