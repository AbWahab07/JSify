{% comment %} {% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
{% for image in product.images %}
  <a href="{{ image.src | img_url: 'large' }}">
    <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
  </a>
{% endfor %}
<h1>{{ product.title }}</h1>
<form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
  <select name="id" id="productSelect">
    {% for variant in product.variants %}
      {% if variant.available %}
        <option value="{{ variant.id }}">
          {{ variant.title }} - {{ variant.price | money_with_currency }}
        </option>
      {% else %}
        <option disabled="disabled">
          {{ variant.title }} - sold out
        </option>
      {% endif %}
    {% endfor %}
  </select>
  {{ current_variant.price | money }}
  <label for="Quantity">quantity</label>
  <input type="number" id="Quantity" name="quantity" value="1" min="1">
  <button type="submit" name="add" id="AddToCart">Add to cart</button>
</form>
<div>{{ product.description }}</div>
{% include 'ProductStarRating' %}
  <div class="snpt">
    {% if product.vendor == 'Suavecita' %}
    <div class='snpt-wdgt--ppg' data-vendor="suavecita">
  	  <script src='https://snapppt.com/widgets/ppg/0fdbe9ce-1f38-4c32-a7a4-78e6a984fd8c' defer class='snapppt-widget'></script>
    </div>
    {% else %}
    <div class='snpt-wdgt--ppg' data-vendor="suavecito">
        <script src='https://snapppt.com/widgets/ppg/b8a4a3ac-f1db-4f1d-b6bf-d101c36d5f28' defer class='snapppt-widget'></script>
    </div>
    {% endif %}
  </div> {% endcomment %}
<div id="Product" class="container">
  <div class="row valign-wrapper">
    <div class="col padding-none"><h1>{{ product.title }}</h1></div>
  </div>
  {% include 'ProductCarousel' %}
  {% include 'ProductForm' %}
  <div class="row">
    <div class="col padding-none">{{ product.description }}</div>
  </div>
  {% if product.title == 'Oil Based Pomade' or product.title == 'Firme Clay Pomade' or product.title == 'Suavecito Matte Pomade' or product.title == 'Original Hold Pomade' or product.title == 'Firme (Strong) Hold Pomade' or product.title == 'Light Hold Pomade' %}
    <hr />
    {% assign pomade = product.title %}
    {% include 'ProductCompareChart' %}
    <hr />
  {% endif %}

  <div class="snpt">
    {% if product.vendor == 'Suavecita' %}
    <div class='snpt-wdgt--ppg' data-vendor="suavecita">
    </div>
    {% else %}
    <div class='snpt-wdgt--ppg' data-vendor="suavecito">
    </div>
    {% endif %}
  </div>
  {% assign review_count = product.metafields.yotpo['reviews_count'] | plus: 0 %}
  {% if review_count > 0 %}
  <h3>REVIEWS</h3>
  {% else %}
  <h3>LEAVE A REVIEW</h3>
  {% endif %}
  <div class="row">
    <div class="col s12 center-align"><a href="#ReviewForm" class="modal-trigger color-s-red"><i class="material-icons">edit</i> WRITE REVIEW</a></div>
  </div>
  <div class="product-reviews"></div>
</div>
