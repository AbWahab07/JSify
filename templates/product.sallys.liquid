<div id="Product">
  <div class="container">
    <div class="row valign-wrapper">
      <div class="col padding-none"><h1>{{ product.title }}</h1></div>
    </div>
    
    {% comment %}
    {% include 'ProductCarousel' %}
    {% include 'ProductForm' %}
    <div class="row">
      <div class="col padding-none">{{ product.description }}</div>
    </div>
    {% endcomment %}
    
    {% comment %}Start Sally Felix{% endcomment %}
    <div class="sally-product-information">
      <div class="row">
        <div class="col s12 m4">
          <div class="product-single__photos" id="ProductPhoto">
            {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
            <a id="single_image" href="{{ featured_image | img_url: 'master' }}" title="{{ featured_image.alt | escape }}">
              <img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
            </a>
          </div>
        </div>

        <div class="col s12 m8">
          <p><b>Available at</b></p>
          <a href="https://www.sallybeauty.com/search-show/?q=suavecito%20pomade" title="Sally Beauty" target="_blank">
            <img src="{{ 'sally-beauty-logo.svg' | asset_url }}" alt="Sally Beauty">
          </a>

          <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
            <meta itemprop="priceCurrency" content="{{ shop.currency }}">
            <meta itemprop="price" content="{{ product.price }}">
            <link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">
          </div>
          <div class="product-description rte" itemprop="description">
            {{ product.description }}
          </div>
        </div>
      </div>  
    
      <div class="map" style="display: none;">
        <iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=sally%20beauty&region=US&key=AIzaSyB_qKaYOD7VWlrwyv8dkKpaCZD58I58TXo" allowfullscreen></iframe>
      </div>

      <div class="row">
        <div class="col s12 m6 lifestyle-photo">
          <img src="https://cdn.shopify.com/s/files/1/0274/1389/files/suavecito-x-felix-the-cat-chill-tee.jpg?36963" alt="Suavecito X Felix The Cat - Chill Tee">
        </div>
        <div class="col s12 m6 lifestyle-photo">
          <img src="https://cdn.shopify.com/s/files/1/0274/1389/files/suavecito-x-felix-the-cat-pomades-stacked.jpg?36963" alt="Suavecito X Felix The Cat - Original & Firme Hold Pomade">
        </div>
        <div class="col s12 m4 lifestyle-photo">
          <img src="https://cdn.shopify.com/s/files/1/0274/1389/files/suavecito-x-felix-the-cat-diving-pocket-tee.jpg?36963" alt="Suavecito X Felix The Cat - Diving Pocket Tee">
        </div>
        <div class="col s12 m4 lifestyle-photo">
          <img src="https://cdn.shopify.com/s/files/1/0274/1389/files/suavecito-x-felix-the-cat-pomades.jpg?36963" alt="Suavecito X Felix The Cat - Pomades">
        </div>
        <div class="col s12 m4 lifestyle-photo">
          <img src="https://cdn.shopify.com/s/files/1/0274/1389/files/suavecito-x-felix-the-cat-og-tee.jpg?36963" alt="Suavecito X Felix The Cat - OG Tee">
        </div>
        <div class="col s12 m6 lifestyle-photo">
          <img src="https://cdn.shopify.com/s/files/1/0274/1389/files/suavecito-x-felix-the-cat-chill-crewneck-sweatshirt.jpg?36963" alt="Suavecito X Felix The Cat - Chill Crewneck Sweatshirt">
        </div>
        <div class="col s12 m6 lifestyle-photo">
          <img src="https://cdn.shopify.com/s/files/1/0274/1389/files/suavecito-x-felix-the-cat-pomades-layered.jpg?36963" alt="Suavecito X Felix The Cat - Pomades Stacked">
        </div>
      </div>

      <div>
        <div class="video-wrapper" style="display: block; margin: auto; text-align: center;">
          <iframe width="560" height="315" src="https://www.youtube.com/embed/P5Wj-VntvgM" frameborder="0" allowfullscreen=""></iframe>
        </div>
      </div>

    </div>
    
   {% comment %}End Sally Felix{% endcomment %}
    
    {% if product.title == 'Oil Based Pomade' or product.title == 'Firme Clay Pomade' or product.title == 'Suavecito Matte Pomade' or product.title == 'Original Hold Pomade' or product.title == 'Firme (Strong) Hold Pomade' or product.title == 'Light Hold Pomade' %}
      <hr />
      {% assign pomade = product.title %}
      {% include 'ProductCompareChart' %}
      <hr />
    {% endif %}

    <div class="snpt">
      {% if product.vendor == 'Suavecita' %}
      <div class='snpt-wdgt--ppg' data-vendor="suavecita">
        <script src='https://snapppt.com/widgets/ppg/0fdbe9ce-1f38-4c32-a7a4-78e6a984fd8c' defer class='snapppt-widget'></script>
      </div>
      {% else %}
      <div class='snpt-wdgt--ppg' data-vendor="suavecito">
        <script src='https://snapppt.com/widgets/ppg/b8a4a3ac-f1db-4f1d-b6bf-d101c36d5f28' defer class='snapppt-widget'></script>
      </div>
      {% endif %}
    </div>
  </div>

  <div class="section-wrapper grey lighten-4" style="padding: 20px 0;">
    {% section 'product-recommendations' %}
  </div>

  <div class="container">
    {% assign review_count = product.metafields.yotpo['reviews_count'] | plus: 0 %}
    {% if review_count > 0 %}
    <h3>REVIEWS</h3>
    {% else %}
    <h3>LEAVE A REVIEW</h3>
    {% endif %}
    <div class="row">
      <div class="col s12 center-align"><a href="#TemplateProductReviewForm" class="modal-trigger color-s-red"><i class="material-icons">edit</i> WRITE REVIEW</a></div>
    </div>
    <div class="product-reviews" data-s-module="ProductReviews" data-product_id="{{product.id}}"></div>
    {% assign id = 'TemplateProductReviewForm' %}
    {% include 'ReviewModal' %}
  </div>
</div>
