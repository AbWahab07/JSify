{% assign collection_handle = section.settings.Collection %}
{% assign section_title = section.settings.SectionTitle %}
{% assign section_theme = section.settings.SectionTheme %}

{% include 'SideScroll' %}

{% schema %}
  {
    "name": "Side Scroll Collection",
    "settings": [
      {
        "type": "radio",
        "id": "SectionTheme",
        "label": "Section Theme",
        "options": [
          { "value": "section-suavecito", "label": "Suavecito" },
          { "value": "section-suavecita", "label": "Suavecita" }
        ],
        "default": "section-suavecito",
        "info": "The brand color theme"
      },
      {
        "type": "checkbox",
        "id": "InstagramView",
        "label": "Instagram View"
      },
      {
        "id": "Collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "id": "SectionTitle",
        "type": "text",
        "label": "Section Title",
        "info": "Defaults to 'Featured Collection'",
        "default": "Featured Collection"
      }
    ],
    "presets": [
      {
        "name": "Collection",
        "category": "Side Scroll Collections"
      }
    ]
  }
{% endschema %}