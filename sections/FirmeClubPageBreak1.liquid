{% assign background_img = section.settings.Background_Img %}
{% assign background_img_alt = section.settings.Background_Img_alt %}
{% assign content_text_color = section.settings.Content_Text_Color %}

{% include 'PageBreak' %}

  {% schema %}
    {
      "name": "Firme Club Page Break 1",
      "settings": [
        {
          "id": "Background_Img",
          "type": "image_picker",
          "label": "Background Image"
        },
        {
          "id": "Background_Img_Alt",
          "type": "text",
          "label": "Background Image Alt"
        },
        {
          "id": "Content",
          "type": "html",
          "label": "Content (html)"
        },
        {
          "type": "select",
          "id": "Content_Text_Color",
          "label": "Text Color",
          "options": [
            {
              "value": "white",
              "label": "White"
            },
            {
              "value": "black",
              "label": "Black"
            },
            {
              "value": "grey",
              "label": "Grey"
