<div id="{{id}}" class="modal review-form" {%if customer%}data-is-customer="true"{%endif%} 
data-s-module="ProductReviewForm"
data-page-title="{{page_title}}" 
data-id="{{product.id}}"
data-url="https://{{shop.domain}}{{product.url}}"
data-title="{{product.title}}"
data-image="{{ product.featured_image.src | img_url: 'large' }}">
  <div class="modal-content">
    {% if customer %}
      {% include 'ReviewForm' %}
    {% else %}
      <h6>You must be logged in to submit a review</h6>
      {% include 'LoginForm' %}
    {% endif %}
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat color-s-red">Nevermind, I have nothing to say!</a>
    </div>
  </div>
</div>