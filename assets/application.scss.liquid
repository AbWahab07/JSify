/**************************************************
Break points
**************************************************/

$small: 600px;
$medium: 601px;
$large: 993px;
$xlarge: 1201px;

/**************************************************
Colors
**************************************************/
$s_red: #822808;
$s_yellow: #fab203;
$s_red_compliment: #087c82;
$m_teal: #26a69a;

/**************************************************
Helpers
**************************************************/
.background-s-red {
  background-color: $s_red !important;
  &:hover {
    background-color: lighten($s_red, 10%) !important;
  }
}

.background-s-yello {
  background-color: $s_yellow !important;
  &:hover {
    background-color: lighten($s_yellow, 10%) !important;
  }
}

.color-s-red {
  color: $s_red !important;
}

.color-s-yellow {
  color: $s_yellow !important;
}

.margins-auto {
  margin: auto;
}

.margin-bottom-none {
  margin-bottom: 0 !important;
}

.margin-top {
  margin-top: 30px;

  @media screen and(max-width: 480px) {
    margin-top: 15px;
  }
}

.padding-none {
  padding: 0 !important;
}

.sblock {
  @media screen and(max-width: $small) {
    display: block !important;
  }
}

.videoWrapper, .video-wrapper {
  float: none;
  clear: both;
  width: 100%;
  position: relative;
  padding-bottom: 56.25%;
  height: 0;

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}

.padding-none {
  padding: 0 !important;
}

.padding-left-none {
  padding-left: 0 !important;
}

.position-relative {
  position: relative !important;
}

.table {
  display: table;
}

.table-cell {
  display: table-cell;
  vertical-align: middle;
}

.text-m-teal {
  color: $m_teal !important;
}

.text-s-red {
  color: $s_red !important;
}

.text-s-red-compliment {
  color: $s_red_compliment;
}

.w100 {
  width: 100%;
}

/**************************************************
Cards
**************************************************/
  .product-tile {
    span.card-title {
      min-height: 96px;
      @media screen and(max-width: $small) {
        min-height: 0;
      }
    }
  }

  .card-action {
    .row {
      margin-bottom: 0;
    }
  }

/**************************************************
Product Drawer
**************************************************/
#ProductDrawer {
  width: 60%;

  h1 {
    font-size: 3.2em;
    margin: 0;
  }
  @media screen and(max-width: $small) {
    width: 100%;

    h1 {
      font-size: 2.2em;
    }
  }

  .review-count {
    @media screen and(max-width: $small) {
      display: block !important;
    }
  }
}

.drawer-product {
  padding: 30px 15px 15px 15px;
  margin-bottom: 30px;
}

select.product-option {
  display: inline-block;
}

.product-price {
  font-size: 1.5em;
  font-weight: bold;
}

/**************************************************
Product Tile
**************************************************/
.product-tile {
  .product-form {
    @media screen and(max-width: 1645px) {
      .product-price, .star-rating-container {
        width: 100% !important;
      }
      .product-star-rating {
        margin: 0 !important;
      }
    }
    @media screen and(min-width: $medium) {
      min-height: 169px;
    }
  }
}
/**************************************************
Product Compare Chart
**************************************************/
#ProductCompareChart {
  box-sizing: border-box;
  overflow-x: scroll;

  .div-table-cell a {
    color: #000;
    transition: all .2s;
    &:hover {
      color: #222;
    }
  }
  .div-table {
    display: table;
    width: 100%;
    text-align: center;
  }
  .div-table-row {
    display: table-row;
  }
  .div-table-heading {
    background-color: #EEE;
    display: table-header-group;
  }
  .div-table-head {
    background-color: #e5e5e5;
    display: table-cell;
    padding: 10px 10px;
  }
  .div-table-cell {
    display: table-cell;
    padding: 10px 10px;

    &.active {
      background-color: #e5e5e5;
    }
  }
  .div-table-heading {
    background-color: #EEE;
    display: table-header-group;
    font-weight: bold;
  }
  .div-table-foot {
    background-color: #EEE;
    display: table-footer-group;
    font-weight: bold;
  }
  .div-table-body {
    display: table-row-group;
  }

  @media only screen and (max-width: 480px) {
    .div-table {
      font-size: 12px;
      overflow: scroll;
      display: block;
      .div-table-head {
        min-width: 45vw;
      }
      .div-table-cell {
        min-width: 50vw;
        &.first-cell {
          margin-left: 45vw;
          display: block;
        }
      }
      .div-table-head {
        position: fixed;
        &.empty {
          background-color: #e5e5e5;
          div {
            background-color: #e5e5e5;
            display: block;
            padding-top: 100%;
          }
        }
      }
    }
  }
}

/**************************************************
Reviews
**************************************************/
i.vote {
  &:hover {
    color: lighten($s_red, 10%) !important;
    cursor: pointer;
  }
}

/**************************************************
Swiper
**************************************************/
.swiper-button-next, .swiper-button-prev {
  @media screen and(max-width: $small) {
    display: none;
  }
}

.swiper-image {
  max-width: 100%;
}