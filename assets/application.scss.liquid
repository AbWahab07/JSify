@mixin color_drop($color) {
  &:hover {
    a {
      border-bottom: 4px solid $color;
    }
  }
  i {
    color: $color;
  }
}

@mixin transition($prop, $type, $speed) {
  -webkit-transition: $prop, $type, $speed;
  transition: $prop, $type, $speed;
}

@mixin transform($translation, $dimensions) {
  -webkit-transform: $translation($dimensions);
  transform: $translation($dimensions);
}

/**************************************************
Break points
**************************************************/

$small: 600px;
$medium: 601px;
$large: 993px;
$xlarge: 1201px;

/**************************************************
Colors
**************************************************/
$s_red: #822808;
$s_yellow: #fab203;
$s_red_compliment: #087c82;
$m_teal: #26a69a;
$black: #000;
$blue: #0000ff;
$brown: #8b4513;
$burgundy: #800020;
$cream: #fffdd0;
$green: #008000;
$grey: #808080;
$orange: #ffa500;
$pink: #ffc0cb;
$purple: #800080;
$red: #ff0000;
$white: #ffffff;
$yellow: #ffff00;


/**************************************************
Fonts
**************************************************/
$roboto: 'Roboto', sans-serif;
$thin: 100 !important;
$regular: 400 !important;

