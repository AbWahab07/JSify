}

.position-relative {
  position: relative !important;
}

.pull-left {
  -webkit-transform: translateX(-296px);
  transform: translateX(-296px);
  -webkit-transition: all 300ms linear;
  transition: all 300ms linear;
}

.table {
  display: table;
}

.table-cell {
  display: table-cell;
  vertical-align: middle;
}

.text-m-teal {
  color: $m_teal !important;
}

.text-s-red {
  color: $s_red !important;
}

.text-s-red-compliment {
  color: $s_red_compliment;
}

.transition-margin {
  -webkit-transition: all linear 300ms;
  transition: all linear 300ms;
}

.transition-width {
  -webkit-transition: width linear 300ms;
  transition: width linear 300ms;
}

.valign-wrapper_important {
  display: -webkit-box !important;
  display: -ms-flexbox !important;
  display: flex !important;
  -webkit-box-align: center !important;
  -ms-flex-align: center !important;
  align-items: center !important;
}

.w100 {
  width: 100%;
}

/**************************************************
Cards
**************************************************/
.card-action {
  .row {
    margin-bottom: 0;
  }
}

/**************************************************
Collection Header
**************************************************/
#CollectionHeader {
  margin-top: 20px;
  h1 {
    margin: 0;
  }
  .active-tag {
    display: inline-block;
    a {
      align-items: center;
      background-color: $s_red;
      border-radius: 4px;
      color: #fff;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      padding: 0 5px;
      -webkit-box-align: center;
      -webkit-align-items: center;
      -ms-flex-align: center;
      &:hover {
        background-color: lighten($s_red, 10%)
      }
      i {
        padding-right: 5px;
      }
    }
  }

  .filter-list-container {
    height: 54px;
  }

  .row {
    &.valign-wrapper {
      margin-bottom: 0;
    }
  }
  .input-field {
    &.sort-by {
      margin-top: 0;
      margin-bottom: 0;
    }
  }
  .select-dropdown {
    color: $s_red;
  }
  .select-wrapper {
    .caret {
      fill: $s_red;
    }
  }
}

/**************************************************
Filters Drawer
**************************************************/
#FiltersDrawer, #FiltersColumn {
  -webkit-overflow-scrolling: touch;
  h5 {
    border-top: 1px solid #f1efef;
    margin-left: 10px;
    margin-right: 10px;
    padding-top: 10px;
  }

  ul.colors {
    li {
      background-color: transparent !important;
      &.black{@include color_drop($black);}
      &.blue{@include color_drop($blue);}
      &.brown{@include color_drop($brown);}
      &.burgundy{@include color_drop($burgundy);}
      &.cream{@include color_drop($cream);}
      &.green{@include color_drop($green);}
      &.grey{@include color_drop($grey);}
      &.orange{@include color_drop($orange);}
      &.pink{@include color_drop($pink);}
      &.purple{@include color_drop($purple);}
      &.red{@include color_drop($red);}
      &.white{@include color_drop($black);}
      &.yellow{@include color_drop($yellow);}
      a {
        border-bottom: 4px solid #fff;
        height: auto;
        line-height: 14px;
        text-align: center;
        padding: 5px;
        &:hover {
          background-color: transparent !important;
        }
        i {
          background-color: transparent !important;
          float: none;
          margin: auto;
        }
      }
    }
  }
}
#FiltersColumn {
  h5.first-of-type {
    margin-top: 5px;
  }
  ul.colors {
    li {
      float: left;
    }
  }
  li {
    float: none;
    line-height: 48px;

    a {
      color: rgba(0,0,0,0.87);
      display: block;
      font-size: 14px;
      font-weight: 500;
      height: 48px;
      line-height: 48px;
      padding: 0 32px;
      &:hover {
        background-color: rgba(0,0,0,0.05);
      }
      i {
        float: left;
        height: 48px;
        line-height: 48px;
        margin: 0 32px 0 0;
        width: 24px;
        color: rgba(0,0,0,0.54);
      }
    }
  }
}


/**************************************************
General
**************************************************/
body {
  font-family: $roboto;
  font-weight: $regular;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $roboto;
  font-weight: $thin;
 }

 h1 {
   font-size: 46px;
 }

 .toast {
   background-color: $s_yellow !important;
 }

/**************************************************
Product Drawer
**************************************************/
#ProductDrawer {
  width: 60%;
  -webkit-overflow-scrolling: touch;

  .close-drawer {
    color: #fff;
    height: auto;
    margin-right: 5px;
    padding: 0;
  }

  h1 {
    font-size: 3.2em;
    margin: 0;
  }
  @media screen and(max-width: $small) {
    width: 100%;

    h1 {
      font-size: 2.2em;
    }
  }

  .review-count {
    @media screen and(max-width: $small) {
      display: block !important;
    }
  }

  ul {
    list-style-type: disc;
    padding-left: 40px;

    li {
      list-style-type: disc;
    }
  }
}

.drawer-product {
  padding: 30px 15px 15px 15px;
  margin-bottom: 30px;
}

select.product-option {
  display: inline-block;
}

.product-price {
  font-size: 1.5em;
  font-weight: bold;
}

/**************************************************
Product Tile
**************************************************/
.product-tile {
  .card-title {
    font-weight: bold;
    min-height: 96px;
    @media screen and(max-width: $small) {
      min-height: 0;
    }
  }
  .product-form {
    @media screen and(max-width: 1645px) {
      .product-price, .star-rating-container {
        width: 100% !important;
      }
      .product-star-rating {
        margin: 0 !important;
      }
    }
    @media screen and(min-width: $medium) {
      min-height: 169px;
    }
  }
}
/**************************************************
Product Compare Chart
**************************************************/
#ProductCompareChart {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  overflow-x: scroll;

  .div-table-cell a {
    color: #000;
    -webkit-transition: all .2s;
    transition: all .2s;
    &:hover {
      color: #222;
    }
  }
  .div-table {
    display: table;
    width: 1040px;
    text-align: center;
  }
  .div-table-row {
    display: table-row;
  }
  .div-table-heading {
    background-color: #EEE;
    display: table-header-group;
  }
  .div-table-head {
    background-color: #e5e5e5;
    display: table-cell;
    padding: 10px 10px;
  }
  .div-table-cell {
    display: table-cell;
    padding: 10px 10px;

    &.active {
      background-color: #e5e5e5;
    }
  }
  .div-table-heading {
    background-color: #EEE;
    display: table-header-group;
    font-weight: bold;
  }
  .div-table-foot {
    background-color: #EEE;
    display: table-footer-group;
    font-weight: bold;
  }
  .div-table-body {
    display: table-row-group;
  }

  img {
    width: 100%;
    max-width: 100%;
  }
}

/**************************************************
Reviews
**************************************************/
i.vote {
  &:hover {
    color: lighten($s_red, 10%) !important;
    cursor: pointer;
  }
}

.star-rating-selector {
  position: relative;
  .stars {
    background-color: #fafafa;
    color: $s_yellow;
    position: absolute;
    z-index: 1;
    &.active-stars {
      z-index: 2;
    }
    i {
      &:hover {
        cursor: pointer;
      }
    }
  }
}

#ReviewForm {
  &.modal {
    @media screen and(max-width: $small) {
      max-height: 80%;
      width: 95%;
      .modal-content {
        padding: 12px;
      }
    }
  }
}

